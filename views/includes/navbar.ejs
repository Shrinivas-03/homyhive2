// Enhanced search with suggestions and Enter key support
document.addEventListener('DOMContentLoaded', function() {
  const searchInputs = document.querySelectorAll('.search-input');
  
  searchInputs.forEach(input => {
    // Search suggestions on input
    input.addEventListener('input', function(e) {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => {
        showSearchSuggestions(this.value);
      }, 300);
    });
    
    // Handle Enter key
    input.addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        const form = this.closest('form');
        if (form) {
          const event = new Event('submit', { bubbles: true, cancelable: true });
          form.dispatchEvent(event);
        }
      }
    });
    
    // Hide suggestions on blur (with delay for clicking)
    input.addEventListener('blur', function() {
      setTimeout(() => {
        const suggestionContainer = document.getElementById('searchSuggestions');
        if (suggestionContainer) {
          suggestionContainer.classList.remove('show');
        }
      }, 200);
    });
  });
});

// Language Selector & Navbar Translation Functionality
document.addEventListener('DOMContentLoaded', function() {
  console.log('Setting up language selector...');
  
  // Create update function for navbar translations
  window.updateNavbarLanguage = function() {
    if (typeof i18next === 'undefined') {
      console.warn('i18next not available yet');
      return;
    }
    
    console.log('Updating navbar language. Current lang:', i18next.language);
    
    try {
