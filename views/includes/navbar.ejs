      const navExplore = document.getElementById('navExplore');
      if (navExplore) {
        const text = i18next.t('explore', 'Explore');
        console.log('navExplore translation:', text);
        navExplore.textContent = text;
      }
      
      const navAbout = document.getElementById('navAbout');
      if (navAbout) {
        const text = i18next.t('about', 'About');
        console.log('navAbout translation:', text);
        navAbout.textContent = text;
      }
      
      const navHelp = document.getElementById('navHelp');
      if (navHelp) {
        const text = i18next.t('help', 'Help');
        console.log('navHelp translation:', text);
        navHelp.textContent = text;
      }
      
      // Update search input placeholder
      const searchInput = document.getElementById('searchInput');
      if (searchInput) {
        const placeholder = i18next.t('where_go', 'Where do you want to go?');
        console.log('Search placeholder:', placeholder);
        searchInput.placeholder = placeholder;
      }
      
      // Update search button
      const searchBtns = document.querySelectorAll('.search-btn');
      searchBtns.forEach(btn => {
        const text = i18next.t('search_btn', 'Search');
        if (btn.innerHTML.includes('fa-search')) {
          btn.innerHTML = '<i class="fa-solid fa-search"></i><span>' + text + '</span>';
        }
      });
      
      console.log('‚úì Navbar translations updated');
    } catch (e) {
      console.error('Error updating navbar language:', e);
    }
  };
  
  // Setup language selector listener
  const setupLanguageSelector = function() {
    console.log('üìç setupLanguageSelector');
    
    const selector = document.getElementById('languageSelector');
    if (!selector) {
      console.log('‚ö† Selector not found, retry');
      setTimeout(setupLanguageSelector, 200);
      return;
    }
    
    console.log('‚úì Selector found');
    
    // Set initial value
    const saved = localStorage.getItem('preferredLanguage') || 'en';
    selector.value = saved;
    console.log('Initial value set to:', saved);
    
    // Handle changes
    selector.addEventListener('change', function(e) {
      const newLang = e.target.value;
      console.log('\n>>> LANGUAGE CHANGED TO:', newLang, '<<<\n');
      
      if (typeof i18next === 'undefined' || !i18next.isInitialized) {
        console.error('‚úó i18next not ready');
        return;
      }
      
      localStorage.setItem('preferredLanguage', newLang);
      
      // Change language
      i18next.changeLanguage(newLang, function(err, t) {
        if (err) {
          console.error('‚úó Error:', err);
          return;
        }
        
        console.log('‚úì Language changed to:', i18next.language);
        console.log('Testing translations:');
        console.log('  explore:', i18next.t('explore'));
        console.log('  about:', i18next.t('about'));
        console.log('  help:', i18next.t('help'));
        
        // Force UI update
        setTimeout(function() {
          console.log('Updating UI...');
          if (typeof window.updateNavbarLanguage === 'function') {
            window.updateNavbarLanguage();
          }
          if (typeof window.updatePageLanguage === 'function') {
            window.updatePageLanguage();
          }
        }, 100);
      });
    });
  };
  
  // Wait for i18next
  const waitForReady = function() {
    if (window.i18nextReady && typeof i18next !== 'undefined' && i18next.isInitialized) {
      console.log('‚úì i18next ready');
      setupLanguageSelector();
      return;
    }
    
    console.log('‚è≥ Waiting...');
    setTimeout(waitForReady, 100);
  };
  
  console.log('üöÄ Starting language selector setup');
  waitForReady();
});

