<% layout("/layouts/boilerplate")%>

<div class="coming-soon-wrapper">
  <div class="coming-soon-content">
    <div class="icon-container">
      <i class="fa-solid fa-shield-heart"></i>
    </div>
    <h1>Safety</h1>
    <p class="subtitle">Your safety is our top priority</p>
    
    <div class="coming-soon-message">
      <h2>Coming Soon!</h2>
      <p>We're developing comprehensive safety guidelines, verification systems, and 24/7 support to ensure safe experiences for all our community members.</p>
      
      <div class="cta-buttons">
        <a href="/contact" class="btn-primary">Report an Issue</a>
        <a href="/help" class="btn-secondary">Safety Guidelines</a>
      </div>
    </div>
  </div>
</div>

<style>
  body { background: #f7faf9; }
  .coming-soon-wrapper { max-width:700px; margin:0 auto; padding:3rem 1rem; display:flex; align-items:center; justify-content:center }
  .coming-soon-content { background:#fff; padding:2rem; border-radius:12px; box-shadow:0 12px 30px rgba(7,10,21,0.06); width:100% }
  .icon-container { width:84px; height:84px; background:linear-gradient(135deg,#10b981 0%,#059669 100%); border-radius:50%; display:flex; align-items:center; justify-content:center; margin:0 auto 1rem; color:#fff }
  .coming-soon-content h1{ color:#064e3b; font-size:2rem; margin-bottom:.25rem }
  .subtitle{ color:#475569; margin-bottom:.75rem }
  .coming-soon-message h2{ color:#0f172a; font-size:1.15rem }
  .cta-buttons{ display:flex; gap:.75rem; justify-content:center; margin-top:1rem }
  .btn-primary{ background:#059669; color:#fff; padding:.6rem 1.1rem; border-radius:8px; text-decoration:none; font-weight:700 }
  .btn-secondary{ background:transparent; color:#065f46; border:2px solid #e6f7ef; padding:.55rem 1rem; border-radius:8px; text-decoration:none }
  @media(max-width:768px){ .coming-soon-content h1{ font-size:1.5rem } .cta-buttons{ flex-direction:column } }
</style>