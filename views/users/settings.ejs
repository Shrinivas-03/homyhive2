<% layout('/layouts/boilerplate') %>
<style>
  .settings-hero {
    background: linear-gradient(135deg, #fe424d 0%, #ff6b6b 100%);
    border-radius: 24px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.08);
    padding: 2.5rem 2rem 2rem 2rem;
    margin-bottom: 2.5rem;
    color: #fff;
    text-align: center;
    position: relative;
    overflow: hidden;
    max-width: 540px;
    margin-left: auto;
    margin-right: auto;
  }
  .settings-card {
    border-radius: 18px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.07);
    background: #fff;
    padding: 2.5rem 2rem 1.5rem 2rem;
    max-width: 540px;
    margin-left: auto;
    margin-right: auto;
  }
  .settings-card .form-label {
    color: #fe424d;
    font-weight: 600;
    font-size: 1.05rem;
  }
  .settings-card .form-control[disabled],
  .settings-card textarea[disabled] {
    background: #f8f9fa;
    color: #888;
    border: 1px solid #e2e8f0;
  }
</style>
<div class="container py-5">
  <div class="settings-hero">
    <h2 class="fw-bold mb-1"><i class="fa-solid fa-cog me-2"></i>Account Settings</h2>
    <div class="mb-2">Manage your account details and preferences.</div>
  </div>
  <div class="settings-card">
    <div class="mb-3">
      <label class="form-label">Name</label>
      <input type="text" class="form-control" value="<%= user ? (user.displayName || user.username || '') : '' %>" disabled>
    </div>
    <div class="mb-3">
      <label class="form-label">Email</label>
      <input type="email" class="form-control" value="<%= user && user.email ? user.email : '' %>" disabled>
    </div>
    <div class="mb-3">
      <label class="form-label">Phone</label>
      <input type="text" class="form-control" value="<%= user && user.phone ? user.phone : '' %>" disabled>
    </div>
    <div class="mb-3">
      <label class="form-label">Bio</label>
      <textarea class="form-control" rows="2" disabled><%= user && user.bio ? user.bio : '' %></textarea>
    </div>
    <div class="alert alert-info mt-4">Profile editing coming soon.</div>
  </div>
</div>
